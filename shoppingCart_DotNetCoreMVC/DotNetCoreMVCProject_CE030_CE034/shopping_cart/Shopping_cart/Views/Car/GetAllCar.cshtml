@model IEnumerable<eCar_Rental_System.Models.Car>
@{
    ViewData["Title"] = "Manage Products";
}

<h1>Manage Products</h1>
<center>
    <a class="btn btn-dark" asp-controller="Car" asp-action="AddCar">Add Product</a>
</center>
<hr />

@if(! Model.Any())
{
    <center><h1>No Product is Added !!</h1></center>
}
else
{

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-10 offset-md-0 offset-sm-1" style="margin-bottom: 10px;">
            <div class="card">
                <img class="card-img" src="~/images/@car.PhotoPath" style="width:100%; height:200px;" />
                <div class="card-body">
                    <b>Name:</b><p style="display:inline-block;">&nbsp;@car.Name</p>
                    <br />
                    <b>Product Type:</b><p style="display:inline-block;">&nbsp;@car.FuelType</p>
                    <br />
                    <b>Quantity:</b><p style="display:inline-block;">&nbsp;@car.No_Seat</p>&nbsp;&nbsp;&nbsp;
                    <b>Price:</b><p style="display:inline-block;">&nbsp;&#8377;@car.Rate&nbsp;Rs</p>
                    <br />
                    <a class="btn btn-dark" asp-controller="Car" asp-action="EditCar" asp-route-id="@car.Id">Edit</a>
                    &nbsp;&nbsp;
                    <a class="btn btn-dark" asp-controller="Car" asp-action="DeleteCar" asp-route-id="@car.Id">Delete</a>
                </div>
            </div>
        </div>
    }

</div>

}
