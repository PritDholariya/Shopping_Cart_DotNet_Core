@model eCar_Rental_System.ViewModels.CarAddViewModel

@{ 
    ViewData["Title"] = "Add Product";
}

<form enctype="multipart/form-data" asp-controller="Car" asp-action="AddCar" method="post" class="mt-3">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Product Name</label>
        <div class="col-sm-10 col-lg-5">
            <input asp-for="Name" class="form-control" placeholder="Product Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Quantity</label>
        <div class="col-sm-10 col-lg-5">
            <input asp-for="No_Seat" class="form-control" placeholder="Quantity" />
            <span asp-validation-for="No_Seat" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10 col-lg-5">
            <input asp-for="Rate" class="form-control" placeholder="Price" />
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Product Type</label>
        <div class="col-sm-10 col-lg-5">
            <input asp-for="FuelType" class="form-control" placeholder="Product Type" />
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 col-lg-5">
            <input asp-for="Description" class="form-control" placeholder="Product Name" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 col-lg-5">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-sm-10 col-lg-5">
        <button type="submit" class="btn btn-dark">Add Product</button>
        <button class="btn btn-dark" asp-controller="Car" asp-action="GetAllCar">Back</button>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on('change', function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</form>